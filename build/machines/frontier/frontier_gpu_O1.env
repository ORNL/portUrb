#!/bin/bash

source ${MODULESHOME}/init/bash
module reset
module load PrgEnv-amd amd/6.1.3 cray-parallel-netcdf cmake craype-accel-amd-gfx90a cray-hdf5 cray-netcdf

export ROCM_PATH=${CRAY_AMD_COMPILER_PREFIX}

export CC=cc
export FC=ftn
export CXX=CC

export GATOR_INITIAL_MB=63000
export MPICH_GPU_SUPPORT_ENABLED=1
unset HSA_XNACK

export PORTURB_BACKEND="Kokkos_ENABLE_HIP"
export PORTURB_ARCH="Kokkos_ARCH_AMD_GFX90A"
export PORTURB_CXX_FLAGS="-DHAVE_MPI;-DYAKL_PROFILE;-DPORTURB_FUNCTION_TIMERS;-DPORTURB_FUNCTION_TIMER_BARRIER;-DPORTURB_GPU_AWARE_MPI;-DYAKL_EXPERIMENTAL_HIP_LAUNCHER;-munsafe-fp-atomics;-O1;-I${ROCM_PATH}/include;-D__HIP_ROCclr__;-D__HIP_ARCH_GFX90A__=1;--rocm-path=${ROCM_PATH};--offload-arch=gfx90a;-Wno-unused-result;-Wno-macro-redefined"
export PORTURB_F90_FLAGS="-O1"
export PORTURB_LINK_FLAGS="--rocm-path=${ROCM_PATH};-L${ROCM_PATH}/lib;-lamdhip64"
unset PORTURB_DEBUG

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS

